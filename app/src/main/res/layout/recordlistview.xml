<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="94dp">
        <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp" android:id="@+id/TVrecord"/>
        <TextView

                android:layout_width="match_parent"
                android:layout_height="32dp" android:id="@+id/TVround"/>
        <TextView

                android:layout_width="match_parent"
                android:layout_height="30dp" android:id="@+id/TVtime"/>
    </LinearLayout>
</LinearLayout>